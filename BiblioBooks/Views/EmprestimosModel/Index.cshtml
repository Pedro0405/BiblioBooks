@model IEnumerable<BiblioBooks.Models.EmprestimosModel>

@{
    ViewData["Title"] = "Index";
}
<div class="container">
<div class="d-flex justify-content-between align-items-center mb-5">
<h1>Emprestimos</h1>
    <a asp-action="Create" class="btn btn-success mx-2">Adcionar emprestimo</a>
    </div>

    @if (TempData["MenssagemSucesso"] != null)
    {
        <div class="alert alert-success text-light" role="alert">
            @TempData["MenssagemSucesso"]

    </div>
    }
    @if (TempData["MenssagemErro"] != null)
    {
            <div class="alert alert-danger text-light" role="alert">
            @TempData["MenssagemErro"]

        </div>
    }

<table id="Emprestimos" class="table table-dark mt-5">
    <thead>
        <tr>
             <th>
                    @Html.DisplayNameFor(model => model.ImagemLivro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Recebedor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fornecedor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LivroEmprestado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataEmprestimo)
            </th>
              <th>
                    <p> Atrasado: </p>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
              <td>
                   <img style="width: 100px; height: 60;" class="img-fluid align-content-center" src="/Images/@item.ImagemLivro" alt="Imagem do Livro" wdith="25" height="60"/>
             </td>
            <td>
                @Html.DisplayFor(modelItem => item.Recebedor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fornecedor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LivroEmprestado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataEmprestimo)
            </td>
                 <td>
                       @if(item.DataDevolucao < DateTime.Now)
                       {
                         <p> Sim</p>
                       }
                       else
                       {
                         <p> Não </p>
                       }
                </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.id" class="btn btn-warning btn-sm ">Edit</a> 
                    <a asp-action="Details" asp-route-id="@item.id" class="btn btn-info btn-sm">Detailhes</a> 
                    <a asp-action="Delete" asp-route-id="@item.id" class="btn btn-danger btn-sm">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
    </div>